model random_functions_neuromod_synapse:
    state:
        w real = 1                 # synaptic weight
        pre_tr real = 0.0          # presynaptic eligibility trace
        post_tr real = 0.0         # postsynaptic trace (optional)
        mod real = 0.0             # surprise / modulatory signal accumulator
        rand_u real = 0.0
        use_random_func boolean = false

    parameters:
        eta real = 0.01          # learning rate
        tau_pre ms = 20 ms       # decay of pre-trace
        tau_post ms = 20 ms      # decay of post-trace
        tau_mod ms = 100 ms      # decay of modulatory trace
        d ms = 1 ms              # synaptic delay

    equations:
        pre_tr' = -pre_tr / tau_pre
        post_tr' = -post_tr / tau_post
        mod' = -mod / tau_mod

    input:
        pre_spikes <- spike
        post_spikes <- spike
        mod_spikes <- spike

    output:
        spike(weight real, delay ms)

    onReceive(mod_spikes):
        rand_n real = 0.0
        if use_random_func:
            rand_u = random_uniform(0, 1)
            rand_n = random_normal(500, 25)
        mod = mod + eta * rand_u + rand_n

    onReceive(pre_spikes):
        pre_tr += 1
        emit_spike(w, d)

    onReceive(post_spikes):
        post_tr += 1
        w += mod * pre_tr * post_tr

    update:
        integrate_odes()
