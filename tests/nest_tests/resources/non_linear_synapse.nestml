model non_linear_synapse:
    state:
        x real = 40.
        y real = 9.
        w real = 0.
        d ms = 1.0 ms

    equations:
        x' = (alpha * x - beta * x * y) / ms
        y' = (-gamma * y + delta * x * y) / ms

    parameters:
        alpha real = 0.1
        beta real = 0.02
        delta real = 0.01
        gamma real = 0.3

    input:
        pre_spikes <- spike

    output:
        spike

    onReceive(pre_spikes):
        w += x * y
        emit_spike(w)

    update:
        integrate_odes()
