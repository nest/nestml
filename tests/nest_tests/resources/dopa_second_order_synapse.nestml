model dopa_second_order_synapse:
    state:
        dopa_rate real = 0.
        dopa_rate_d real = 0.

    parameters:
        tau_dopa ms = 100 ms
        d ms = 1 ms    @nest::delay

    equations:
        dopa_rate' = dopa_rate_d / ms
        dopa_rate_d' = -dopa_rate / tau_dopa**2 * ms - 2 * dopa_rate_d / tau_dopa

    input:
        pre_spikes <- spike
        dopa_spikes <- spike

    output:
        spike

    onReceive(dopa_spikes):
        dopa_rate_d += 1. / tau_dopa

    onReceive(pre_spikes):
        emit_spike(1., 1 ms)

    update:
        integrate_odes()
