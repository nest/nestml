neuron logarithm_function_test:
    state:
        x real = 0.
        ln_state real = 0.
        log10_state real = 0.

    input:
        spikeInh nS <- inhibitory spike
        spikeExc nS <- excitatory spike
        currents pA <- continuous

    update:
        ln_state = ln(x)
        log10_state = log10(x)
        x = x + 1.
