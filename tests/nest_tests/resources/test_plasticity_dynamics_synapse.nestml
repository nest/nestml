model test_plasticity_dynamics_synapse:
    state:
        w real = 1.0
        t_last_pre_spike ms = 0 ms

    parameters:
        d ms = 1.0 ms
        stdp_speed real = 0.01

    input:
        pre_spikes <- spike
        post_spikes <- spike

    output:
        spike(weight real, delay ms)

    onReceive(post_spikes):
        if t_last_pre_spike < t and t <= (t_last_pre_spike + 1*ms):
            w += stdp_speed

    onReceive(pre_spikes):
        t_last_pre_spike = t
        emit_spike(w, d)
