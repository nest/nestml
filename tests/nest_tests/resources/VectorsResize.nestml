model vector_resize:
    state:
        # accumulator for x values
        y real = 0.
        x[N] real = 1.

    parameters:
        N integer = 1  # array size

    update:
        j integer = 0
        y = 0
        for j in 0 ... N step 1:
            y += x[j]
        print ("y= {y}\n")
