neuron vector_resize:
    state:
      # accumulator for x values
      y real = 0.

      x[N] real = 1.
    end

    parameters:
      N integer = 1  # array size
    end

    update:
      j integer = 0
      y = 0
      for j in 0 ... N step 1:
        y += x[j]
      end
      print ("y= {y}\n")
    end
end