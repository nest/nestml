neuron add_spikes_to_ode:
  state:
    x real = 0
    y real = 0

  equations:
    x' = -x + 42 * spikes / s      # linear eq
    y' = -y**2 + 123 * spikes / s   # nonlinear eq

  input:
    spikes real <- spike

  output:
    spike

  update:
    integrate_odes()

    x += spikes / 5
    y += spikes / 42
