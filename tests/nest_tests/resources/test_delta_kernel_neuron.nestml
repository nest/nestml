model test_delta_kernel_neuron:
    state:
        x mV = 0 mV

    equations:
        kernel delta_kernel = delta(t)
        recordable inline psp mV = convolve(delta_kernel, spikes) * mV
        # x' = -x / tau_m + psp / ms
        x' = -x / tau_m + (spikes * V)

    parameters:
        tau_m ms = 10 ms

    input:
        spikes <- spike

    output:
        spike

    update:
        integrate_odes()
