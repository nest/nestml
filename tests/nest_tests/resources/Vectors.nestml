        g_in [20] mV = 11mV
        g_ex [ten] mV = 1mV

    parameters:
        taus [15] ms = 2 ms
        V_thr mV = -55 mV
        ten integer = 10

    update:
        i integer = 0
        g_ex[1] = -2 mV
        i = 1
        V_m += -0.03 mV
