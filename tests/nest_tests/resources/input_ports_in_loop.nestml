model input_ports_loop:
    state:
        AMPA_spikes_buf[4] real = 0
        GABA_spikes_buf[5] real = 0

        NMDA_spikes_sum real = 0
        AMPA_spikes_sum real = 0
        GABA_spikes_sum[N_spikes] real = 0

    parameters:
        N_buf integer = 5
        N_spikes integer = 10

    input:
        NMDA_spikes <- spike(weight real)
        AMPA_spikes[2] <- spike(weight real)
        GABA_spikes[5] <- spike(weight real)

    onReceive(NMDA_spikes):
        NMDA_spikes_sum += NMDA_spikes.weight

    onReceive(AMPA_spikes[i integer]):
        AMPA_spikes_buf[i + 2] = AMPA_spikes[i].weight

    onReceive(GABA_spikes[j integer]):
        GABA_spikes_buf[j] = GABA_spikes[j].weight

    update:
        # AMPA_spikes
        i integer = 0
        for i in 0 ... 2 step 1:
            AMPA_spikes_sum += 2.5 * AMPA_spikes_buf[i + 2]
            AMPA_spikes_buf[i + 2] = 0

        # GABA_spikes
        j integer = 0
        k integer = 0
        while j < N_buf and k < N_spikes:
            GABA_spikes_sum[k + 2] += GABA_spikes_buf[j]
            GABA_spikes_buf[j] = 0
            j += 1
            k += 1
