model dde_numeric:
    state:
        x real = 0
        z real = 0

    equations:
        x' = alpha_x / ((1 + x**n_x) * ms) - beta_x * x
        z' = alpha_z / ((1 + x(t-delay)**n_z) * ms) - beta_z * z

    parameters:
        alpha_x real = 0.5
        alpha_z real = 0.3529
        beta_x real = 0.5
        beta_z real = 0.5
        n_x integer = 2
        n_z integer = 2

        # delay parameter
        delay ms = 5.0 ms

    update:
        integrate_odes()
