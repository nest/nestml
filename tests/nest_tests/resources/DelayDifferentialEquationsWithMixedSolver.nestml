model dde_mixed:
    state:
        x real = 0.01
        z real = 0.01

    equations:
        inline eta_act real = (etaX - epsilon) * (1 + etaX**n_act)
        x' = etaX - x / ms
        z' = epsilon + eta_act / ((1 + x(t - delay)**n_act) * ms) - z

    parameters:
        etaX integer = 6
        n_act integer = -2
        epsilon real = 0.5

        # delay parameter
        delay integer = 2

    update:
        integrate_odes()
