neuron izhikevich_delay:

  state:
    x real = 0.01
    z real = 0.01
  end

  equations:
    inline eta_act real = (etaX - epsilon) * (1 + etaX**n_act)
    x' = etaX - x / ms
    z' = epsilon + eta_act / ((1 + x(t - delay)**n_act) * ms) - z
  end

  parameters:
    etaX integer = 6
    n_act integer = -2
    epsilon real = 0

    # delay parameter
    delay integer = 2
  end

  update:
    integrate_odes()
  end

end
