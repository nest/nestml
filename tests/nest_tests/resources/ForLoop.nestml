neuron for_loop:
    state:
        V_m mV = -0.20 mV
    end

    parameters:
      N integer = 42
    end

    update:
      k integer = 0
      j integer = 0
      for j in 0 ... N step 1:
         k = j / N
         V_m += 0.01 mV
       end
    end

end
