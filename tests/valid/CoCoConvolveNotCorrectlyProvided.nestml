model CoCoConvolveNotCorrectlyProvided:
    equations:
        kernel test = 10
        inline testB pA = convolve(test, spikeExc) * pA # convolve provided with a kernel and a spike input port, thus correct

    input:
        spikeExc <- spike

    update:
        integrate_odes()
