model CoCoConvolveNotCorrectlyParametrized:
    parameters:
        tau ms = 20 ms

    state:
        G real = 1.

    equations:
        kernel G' = -G / tau
        inline testB pA = convolve(G, spikeExc) * pA   # convolve is now correctly parametrized

    input:
        spikeExc <- excitatory spike
