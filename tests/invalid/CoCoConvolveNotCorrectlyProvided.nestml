model CoCoConvolveNotCorrectlyProvided:
    state:
        V_m mV = 10mV
        g_ex mV = 10mV

    equations:
        kernel test = 10
        inline testB pA = convolve(g_ex, g_ex) + test
        V_m' = 20 mV/ms

    input:
        spikeExc <- spike

    update:
        integrate_odes()
