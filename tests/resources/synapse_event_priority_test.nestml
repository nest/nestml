synapse synapse_event_priority_test:
  state:
    tr real = 1.
  end

  parameters:
    d ms = 1. ms  @nest::delay
  end

  input:
    pre_spikes real <- spike
    post_spikes real <- spike
  end

  onReceive(pre_spikes, priority=1):
    tr += 1.
    deliver_spike(1., d)
  end

  onReceive(post_spikes, priority=2):
    tr *= 3.14159
  end

end
