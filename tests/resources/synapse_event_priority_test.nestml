model event_priority_test_synapse:
    state:
        tr real = 1.

    parameters:
        w real = 1.  @nest::weight
        d ms = 1. ms  @nest::delay

    input:
        pre_spikes <- spike
        post_spikes <- spike

    output:
        spike

    onReceive(pre_spikes, priority=1):
        tr += 1.
        emit_spike(1., d)

    onReceive(post_spikes, priority=2):
        tr *= 3.14159
