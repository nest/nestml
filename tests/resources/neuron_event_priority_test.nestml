model event_priority_test_neuron:
    state:
        tr real = 1.

    parameters:
        d ms = 1. ms  @nest::delay

    input:
        in_port1 <- spike
        in_port2 <- spike

    onReceive(in_port1, priority=1):
        tr += 1.

    onReceive(in_port2, priority=2):
        tr *= 3.14159
