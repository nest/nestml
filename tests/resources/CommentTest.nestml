neuron commentTest:
    #state comment ok
    state:
        #pre comment not ok

        #pre comment 1 ok
        #pre comment 2 ok
        test real = -50 #inline comment ok
        #post comment 1 ok
        #post comment 2 ok

        #post comment not ok

    #equations comment ok
    equations:
        test' = -test/tau

    #parameters comment ok
    parameters:
       tau ms = 5 ms

    #internals comment ok
    internals:
        intr integer = 1

    #input comment ok
    input:
        NMDA pA <- spike

    #output comment ok
    output: spike

    #update comment ok
    update:
        #statement comment ok
        test2 boolean = True

        #block comment ok
        if test2 == True:
            test = test + 1
