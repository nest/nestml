{#
  In general case creates an
  @param variable VariableSymbol Variable for which the initialization should be done
#}
{%- import 'directives/VectorDeclaration.jinja2' as vector_declaration with context %}
  {% if tracing %}/* generated by {{self._TemplateReference__context.name}} */ {% endif -%}
{% if variable.has_declaring_expression() and not variable.is_kernel() %}
  {%- if variable.has_vector_parameter() %}
{{vector_declaration.VectorDeclaration(variable)}}
  {%- else %}
  {{printer.print_origin(variable)}}{{names.name(variable)}} = {{printer.print_expression(variable.get_declaring_expression())}}; // as {{variable.get_type_symbol().print_symbol()}}
  {%- endif %}
{%- else %}
  {%- if variable.has_vector_parameter() %}
  {{printer.print_origin(variable)}}{{names.name(variable)}}.resize(0); // as {{variable.get_type_symbol().print_symbol()}}
  {%- else %}
  {{printer.print_origin(variable)}}{{names.name(variable)}} = 0; // as {{variable.get_type_symbol().print_symbol()}}
  {%- endif -%}
{%- endif -%}