    U_old mV = V_m
    integrate_odes()

    # sending spikes: crossing 0 mV, pseudo-refractoriness and local maximum...
    if r > 0:
      r -= 1
    elif V_m > 0mV and U_old > V_m:
      r = refractory_counts
      emit_spike()
    end

    g_ex' += spikeExc * PSCurrInit_E
    g_in' += spikeInh * PSCurrInit_I
  end

end
