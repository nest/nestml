    ## alpha function for the g_in
    g_in'' = (-2/tau_syn_in) * g_in'-(1/tau_syn_in**2) * g_in
    g_in' = g_in'

    ## alpha function for the g_ex
    g_ex'' = (-2/tau_syn_ex) * g_ex'-(1/tau_syn_ex**2) * g_ex
    g_ex' = g_ex'
  end

