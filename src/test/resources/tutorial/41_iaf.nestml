neuron IaF:

  state:
    V_m mV = 0mV
  end

  equations:
    V_m' = I_syn + a - b*V_m
  end

  parameters:
    I_syn pA = 10pA
    a real = -7.0
    b real = 0.1
    c mV =  0mV
    V_th mV =  10mV
  end

  input:
    spikes nS <- spike
  end

  output: spike

  update:
    integrate_odes()
    if V_m > V_th:
      V_m = c
      emit_spike()
    end
  end


end