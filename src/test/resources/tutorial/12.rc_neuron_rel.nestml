/*
  A straight forward implementation of the RC circuit approach
*/
neuron rc_neuron_rel:



  equations:
    V_m' = -(V_m - E_L)/tau_m  + I_syn/C_m
  end

  parameters:
    E_L   mV = -70mV
    C_m   pF = 250pF
    tau_m ms = 10ms
    I_syn pA = 10pA
  end

  state:
    V_m mV = E_L
  end

  input:
    spikes nS <- spike
  end

  output: spike

  update:
    integrate_odes()
  end

end