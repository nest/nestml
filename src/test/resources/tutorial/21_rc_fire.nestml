/*
  A straight forward implementation of the RC circuit approach.
  Extends the integrate method with a threshold and fire behaviour.
*/
neuron rc_fire:

  state:
    V_m mV = E_L
  end

  equations:
    V_m' = -(V_m - E_L)/tau_m + I_syn/C_m
  end

  parameters:
    E_L   mV = -70mV
    C_m   pF = 250pF
    tau_m ms = 10ms
    I_syn pA = 10pA
    V_th mV =  -55mV - E_L
    V_reset mV =  -65mV - E_L
  end

  input:
    spikes nS <- spike
  end

  output: spike

  update:
    integrate_odes()
    if V_m > V_th:
      V_m = V_reset
      emit_spike()
    end
  end


end