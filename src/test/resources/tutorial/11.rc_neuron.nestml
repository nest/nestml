/*
  A straight forward implementation of the RC circuit approach
*/
neuron rc_neuron:

  state:
    V_m mV = 0mV
  end

  equations:
      V_m' = -V_m/tau_m + I_syn/C_m
  end

  parameters:
    E_L   mV = -65mV
    C_m   pF = 250pF
    tau_m ms = 10ms
    I_syn pA = 10pA
  end

  input:
    spikes nS <- spike
  end

  output: spike

  update:
    integrate_odes()
  end

end