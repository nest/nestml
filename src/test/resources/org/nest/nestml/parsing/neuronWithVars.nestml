neuron VarsNeuron:
  state:
    vM mV
    x mV
    abc mm
  end

  parameters:
    radius mm = 5
    alias diameter mm = 2 * radius
  end

  internals:
    y, z real = 0
  end

  update:
  end

  function set_diameter(v mm):
    radius = v / 2
  end

  input:
    spikeBuffer   <- inhibitory excitatory spike
    currentBuffer <- current
  end

  output: spike
end
